<h1>Portfolio Items</h1>



<%= link_to "Create New Item", new_portfolio_path %>


<% @portfolio_items.each do |portfolio_item| %>
<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>
<%= image_tag portfolio_item.main_image if !portfolio_item.main_image.nil? %>
<%= link_to "Edit",edit_portfolio_path(portfolio_item)%>

#Will Send User to Destroy Action
#having method: : delete will redirect path to the destroy Action, if it werent there it would direct to show method
<%= link_to 'Destroy Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %> 
<%  end %>

